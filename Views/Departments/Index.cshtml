@model IEnumerable<InventoryApplication.Models.Department>

@{
    ViewData["Title"] = "Список";
}

<h1>Список відділів</h1>

<p>
    <a asp-action="Create">Створити новий</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResponsibleEmployee)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponsibleEmployee.FullName)
                    </td>
                    <td>
                        <div class="d-flex align-content-center justify-content-end gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>